<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/lytListItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_weight="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblLabel"
            tools:text="Task Label"
            android:textSize="18sp"
            android:layout_toStartOf="@id/lytButtons"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:id="@+id/lytButtons"
            android:layout_centerInParent="true">

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_remove_24px"
                android:contentDescription="@string/imgContentDescription"
                android:id="@+id/imgMinus"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtValue"
                    android:paddingStart="8dp"
                    android:text="0"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24sp"
                    android:paddingEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtUnit"
                    android:paddingStart="8dp"
                    android:text="item(s)"
                    android:paddingEnd="8dp" />

            </LinearLayout>

            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_baseline_add_24px"
                android:contentDescription="@string/imgContentDescription"
                android:id="@+id/imgPlus"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider" />

</LinearLayout>