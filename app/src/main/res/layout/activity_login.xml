<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login_background"
        android:scaleType="centerCrop"
        android:tint="@color/colorPrimaryTransparent"
        android:tintMode="screen"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_login_logo"
        android:alpha="0.5"
        android:layout_marginTop="40dp"
        android:tintMode="screen"
        android:tint="#FF00FF"
        android:gravity="center"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="mySelf"
            android:textStyle="bold"
            android:fontFamily="roboto-black"
            android:textSize="36sp"
            android:textColor="@color/colorPrimary"
            android:foregroundTint="#00ffffff"
            android:foregroundTintMode="src_atop"
            />
    </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintBottom_toBottomOf="parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#aa3C5898"
        android:textColor="@android:color/white"
        android:text="Login with Facebook"
        android:textAllCaps="false"
        android:layout_marginEnd="5dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#aaDC4538"
        android:textColor="@android:color/white"
        android:text="Login with Google"
        android:textAllCaps="false"
        android:layout_marginStart="5dp"
        />
</LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Continue without an account - git test"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>